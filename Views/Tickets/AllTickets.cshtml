@using KillBug.ViewModels
@model IEnumerable<TicketsIndexViewModel>
@{
    ViewBag.Title = "All Tickets";
}

<table class="table table-striped" id="tickTable">
    <thead>
        <tr>
            <th class="d-none"></th>
            <th class="d-none"></th>
            <th>
                @Html.DisplayName("Priority")
            </th>
            <th>
                @Html.DisplayName("Project")
            </th>
            <th>
                @Html.DisplayName("Title")
            </th>
            <th>
                @Html.DisplayName("Developer")
            </th>
            <th>
                @Html.DisplayName("Type")
            </th>
            <th>
                @Html.DisplayName("Status")
            </th>
            <th>
                @Html.DisplayName("Created")
            </th>
            <th>
                @Html.DisplayName("Submitter")
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td class="d-none">@Html.DisplayFor(modelItem => item.Ticket.Id) </td>
                <td class="d-none">@Html.ActionLink("DashHidden","Dashboard", "Tickets", new { id = item.Ticket.Id }, new { name = @item.Ticket.Id })</td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ticket.TicketPriority.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ticket.Project.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ticket.Title)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ticket.Developer.FullName)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ticket.TicketType.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ticket.TicketStatus.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ticket.Created)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ticket.Submitter.FullName)
                </td>
                <td>
                    @Html.ActionLink("Details", "Details", "Tickets", new { id = item.Ticket.Id }, null)
                </td>
            </tr>
        }
    </tbody>
</table>

@section Scripts{
    <script>
        $('#TicketsMenu').click()
        $('#TicketAll').addClass("active")

        //$('.table').DataTable();

        var table = $('#tickTable').DataTable()
        $('#tickTable tbody').on('click', 'tr', function () {
            var data = table.row(this).data();
            window.location = $('[name=`${data[0]}`]').attr('href');
        })
    </script>
}